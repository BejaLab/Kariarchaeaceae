rule gtdb_heimdallr_matches:
    input:
        blastp = "analysis/blastp/GTDB-HeimdallR.txt",
        fasta = "analysis/rhodopsin_cds/GTDB/coding.faa"
    output:
        "analysis/recomb/GTDB-HeimdallR.faa"
    params:
        evalue_col = 13,
        sseqid_col = 2,
        evalue = 1e-30
    conda:
        "envs/kits.yaml"
    shell:
        "awk '${params.evalue_col}<{params.evalue}' {input.blastp} | cut -f{params.sseqid_col} | seqkit grep -f- -o {output} {input.fasta}"

rule gtdb_heimdallr_matches_cdhit:
    input:
        "analysis/recomb/GTDB-HeimdallR.faa"
    output:
        "analysis/recomb/GTDB-HeimdallR.cdhit"
    params:
        c = 0.62,
        n = 2
    conda:
        "envs/cd-hit.yaml"
    threads:
        10
    shell:
        "cd-hit -i {input} -o {output} -c {params.c} -n {params.n} -d 0 -T {threads}"

