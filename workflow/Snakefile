    output:
        "analysis/blastp/{database}_clades.csv"
    params:
        cols = [ 'qseqid', 'sseqid', 'pident', 'length', 'qlen', 'slen', 'qseq', 'sseq', 'qstart', 'qend', 'sstart', 'send', 'evalue', 'bitscore', 'stitle' ],
        id = 30,
        score = 90,
        clades = [ 'HeimdallR', 'ACA', 'ACB' ]
    conda:
        "envs/pandas.yaml"
    script:
        "scripts/extract_hits.py"

