        "analysis/blastp/{database}_merged_lca.tsv"
    params:
        lca_mode = 4,
        prefix = "analysis/blastp/{database}_merged"
    conda:
        "envs/kits.yaml"
    threads:
        32
    shell:
        "mmseqs easy-taxonomy {input.query} {input.db} {params.prefix} tmp --lca-mode {params.lca_mode} --tax-lineage 1 --threads {threads}"

