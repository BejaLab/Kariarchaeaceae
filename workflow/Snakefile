        evalue = 1e-5
    conda:
        "envs/blast.yaml"
    threads:
        40
    shell:
        "tblastn -query {input.query} -db {params.db} -outfmt 6 -out {output} -max_target_seqs 1000000000 -num_threads {threads} -evalue {params.evalue}"

