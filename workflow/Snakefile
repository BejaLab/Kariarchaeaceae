rule blastp_fasta:
    input:
        "analysis/blastp/{database}_clades.csv"
    output:
        "analysis/blastp/{database}.fasta"
    conda:
        "envs/kits.yaml"
    shell:
        "csvcut -c sseqid,sseq {input} | csvformat -T | sed 1d | seqkit tab2fx | seqkit seq -g -o {output}"

rule tblastn_gtdb:
    input:
        query = "analysis/blastp/{database}.fasta",
        ndb = "analysis/gtdb/rhodopsins-coding.fna.ndb",
        db = "analysis/gtdb/rhodopsins-coding.fna"
    output:
        "analysis/blastp/{database}_gtdb.txt"
    params:
        cols = [ 'qseqid', 'sseqid', 'pident', 'length', 'qlen', 'slen', 'qstart', 'qend', 'sstart', 'send', 'evalue', 'bitscore', 'stitle' ],
        max_seq = 20
    conda:
        "envs/blast.yaml"
    threads:
        10
    shell:
        "tblastn -query {input.query} -db {input.db} -out {output} -outfmt '6 {params.cols}' -num_threads {threads} -max_target_seqs {params.max_seq}"

rule gtdb_hits:
    input:
        "analysis/blastp/{database}_gtdb.txt"
    output:
        "analysis/blastp/{database}_gtdb.csv"
    params:
        evalue = 1e-20,
        pident = 66.7,
        top_hits = 5,
        ingroup_ratio = 0.51,
        ingroup = 'd__Archaea',
        cols = [ 'qseqid', 'sseqid', 'pident', 'length', 'qlen', 'slen', 'qstart', 'qend', 'sstart', 'send', 'evalue', 'bitscore', 'stitle' ]
    conda:
        "envs/pandas.yaml"
    script:
        "scripts/extract_gtdb_hits.py"

rule copy_gtdb_rhodopsins:
    input:
        "databases/gtdb/rhodopsins-coding.fna"
    output:
        "analysis/gtdb/rhodopsins-coding.fna"
    shell:
        "cp {input} {output}"
